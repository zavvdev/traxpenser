{
  "name": "traxpenser",
  "version": "1.0.0",
  "description": "Expenses Tracker",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "dotenvx run -f .env.production -- node src/index.js",
    "dev": "dotenvx run -f .env.local -- nodemon src/index.js",
    "prepare": "husky",
    "analyze": "npx @biomejs/biome check ./src",
    "unsafe-fix": "npx @biomejs/biome check --fix --unsafe ./src"
  },
