  "bugs": {
    "url": "https://github.com/zavvdev/traxpenser/issues"
  },
  "homepage": "https://github.com/zavvdev/traxpenser#readme",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.44.2",
    "bcrypt": "^6.0.0",
    "decimal.js": "^10.5.0",
    "express": "4.21.2",
    "mongoose": "^8.14.3",
    "remeda": "^2.22.3",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10"
